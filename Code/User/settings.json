{
    "editor.fontSize": 12,
    "editor.fontFamily": "Monaco for Powerline, Consolas NF",
    "editor.fontLigatures": true,

    // VIM Setup
    "vim.leader": ",",
    "vim.surround": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
    ],
    "workbench.iconTheme": "vscode-icons"
}