// Place your key bindings in this file to override the defaults
[
    // Close buffers VIM style
    // VIM/Tmux style pane splitting and navigation
    {
        "key": "ctrl+a v",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "ctrl+a s",
        "command": "workbench.action.splitEditorOrthogonal"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k",
        "command": "search.action.focusPreviousSearchResult",
        "when": "searchViewletVisible"
    },
    {
        "key": "ctrl+j",
        "command": "search.action.focusNextSearchResult",
        "when": "searchViewletVisible"
    },
    {
        "command": "extension.goto-symbol-stack.goPrevOnStack",
        "key": "ctrl-o"
    },
    {
        "command": "extension.goto-symbol-stack.goNextOnStack",
        "key": "ctrl-i"
    },
    {
        "command": "extension.goto-symbol-stack.goToSearchSymbolDeclaration",
        "key": "alt+t"
    },
    {
        "key": "\\ b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "\\ x",
        "command": "search.action.clearSearchResults",
    }
]