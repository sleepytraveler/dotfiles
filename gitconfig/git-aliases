[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -n 300
	br = branch
	co = checkout
	cm = commit
	sh = show
	purr = pull --rebase
	dsync = !git reset --hard $1 && git pull --rebase
	restore = "!git config remote.origin.fetch \"+refs/heads/*:refs/remotes/origin/*\" && git fetch origin"
	st = status -uno
	last = log -1 HEAD
